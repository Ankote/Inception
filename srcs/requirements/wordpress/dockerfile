FROM debian:11

RUN apt -y update && apt -y upgrade 

EXPOSE 9000

WORKDIR /var/www/

RUN  apt -y install wget

RUN apt-get install -y php\
                    php-fpm\
                    php-mysql\
                    mariadb-client

COPY ./setup.sh /var/www/

COPY ./conf/www.conf /etc/php/7.4/fpm/pool.d/www.conf


RUN  chmod 777  /var/www/setup.sh

RUN wget https://wordpress.org/latest.tar.gz

RUN tar -xzvf latest.tar.gz

COPY ./conf /var/www/wordpress

RUN chown -R www-data:www-data /var/www/wordpress

RUN find /var/www/wordpress -type d -exec chmod 755 {} \;
RUN find /var/www/wordpress -type f -exec chmod 644 {} \;
RUN rm -fr latest.tar.gz

CMD ["/var/www/setup.sh"]